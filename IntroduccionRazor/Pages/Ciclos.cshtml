@page
@model IntroduccionRazor.Pages.CiclosModel
@{
}

<h3>Ejemplo Ciclo while</h3>
@{
	int i = 0;
	while (i < 10)
	{
		<p>El valor de i es: @i</p>
		i++;
	}

}
<br />

<h3>Ejemplo do-While</h3>
@{
	i = 1;
	do
	{
		<p>@i</p>
		i += 1;
	}
	while (i < 10);
}

<br />
<h3>Ejemplo for</h3>
@{
	for (var j = 10; i < 21; i++)
	{
		<p>El valor de j es: @j</p>
	}
}

<br />

<h3>Ejemplo foreach</h3>
<ul>
	@foreach (var element in HttpContext.Request.Headers)
	{
		<li>@element</li>
	}
</ul>