@page
@model IntroduccionRazor.Pages.ComprobacionCalculoModel
@{
}

<h1>Evaluar expresión (ax + by)<sup>n</sup></h1>

<form method="post">
    <div>
        <label for="a">Valor de a:</label>
        <input type="number" step="any" id="a" name="a" value="@Model.A" required />
    </div>

    <div>
        <label for="x">Valor de x:</label>
        <input type="number" step="any" id="x" name="x" value="@Model.X" required />
    </div>

    <div>
        <label for="b">Valor de b:</label>
        <input type="number" step="any" id="b" name="b" value="@Model.B" required />
    </div>

    <div>
        <label for="y">Valor de y:</label>
        <input type="number" step="any" id="y" name="y" value="@Model.Y" required />
    </div>

    <div>
        <label for="n">Valor de n:</label>
        <input type="number" id="n" name="n" value="@Model.N" min="0" required />
    </div>

    <button type="submit">Calcular</button>
</form>

@if (Model.Resultado.HasValue)
{
    <div>
        <h3>Resultado:</h3>
        <p>El valor de (@Model.A x + @Model.B y)<sup>@Model.N</sup> es: <strong>@Model.Resultado</strong></p>

        <h3>Desarrollo:</h3>
        <p>@Html.Raw(Model.Desarrollo)</p>
        <p>= @Model.Resultado</p>
    </div>
}

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div style="color: red;">
        @Model.Error
    </div>
}